<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditDoctorAndCashierActivity">

    <Button
        android:id="@+id/btnAccDocCancelEdit"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="66dp"
        android:background="@drawable/rectangle_round_button_clear"
        android:text="@string/btnCancelUserCreation"
        android:textColor="#828282"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAccDocSaveEdit" />

    <RelativeLayout
        android:id="@+id/ios_bottom_"
        android:layout_width="410dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="193dp"
        android:layout_marginEnd="194dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/imageViewHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/imgHomeNavBar"
            android:focusableInTouchMode="true"
            app:srcCompat="@drawable/home_24"
            app:tint="#C4C4C4" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnAccDocSaveEdit"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="66dp"
        android:background="@drawable/rectangle_round_button_fill"
        android:text="@string/buttonEditUser"
        android:textColor="#828282"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider11" />

    <TextView
        android:id="@+id/txtCreateUserEmailLabel5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="380dp"
        android:text="@string/address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider10"
        android:layout_width="343dp"
        android:layout_height="1dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="35dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editAccDocLastName" />

    <View
        android:id="@+id/divider11"
        android:layout_width="343dp"
        android:layout_height="1dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="35dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editAccDocLastName" />

    <TextView
        android:id="@+id/txtChangeProfilePhoto2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="179dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="174dp"
        android:text="@string/txtChangeProfilePicture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.657"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <View
        android:id="@+id/divider8"
        android:layout_width="343dp"
        android:layout_height="1dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="35dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editAccDocName" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="73dp"
        android:layout_height="21dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="256dp"
        android:text="@string/txtEditLastName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editAccDocEmail"
        android:layout_width="221dp"
        android:layout_height="51dp"
        android:layout_marginStart="47dp"
        android:background="@null"
        android:ems="10"
        android:hint="@string/validEmail"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toEndOf="@+id/txtCreateUserEmailLabel4"
        app:layout_constraintTop_toBottomOf="@+id/divider9" />

    <EditText
        android:id="@+id/editAccDocName"
        android:layout_width="221dp"
        android:layout_height="51dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:autofillHints=""
        android:background="@null"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/txtCreateUserNameLabel4"
        app:layout_constraintTop_toBottomOf="@+id/txtChangeProfilePhoto2" />

    <View
        android:id="@+id/divider9"
        android:layout_width="343dp"
        android:layout_height="1dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="35dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editAccDocLastName" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="75dp"
        android:layout_height="65dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="160dp"
        android:contentDescription="@string/imgAvatarIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editAccDocTitle"
        app:srcCompat="@drawable/avatarimage" />

    <EditText
        android:id="@+id/editAccDocLastName"
        android:layout_width="221dp"
        android:layout_height="51dp"
        android:layout_marginStart="9dp"
        android:background="@null"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/editAccDocName" />

    <EditText
        android:id="@+id/editAccDocAddress"
        android:layout_width="221dp"
        android:layout_height="51dp"
        android:layout_marginStart="33dp"
        android:background="@null"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/txtCreateUserEmailLabel5"
        app:layout_constraintTop_toBottomOf="@+id/divider10" />

    <TextView
        android:id="@+id/editAccDocTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="114dp"
        android:text="@string/txtEditUserAccount"
        android:textColor="#222222"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCreateUserEmailLabel4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="320dp"
        android:text="@string/txtCreateUserEmailLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCreateUserNameLabel4"
        android:layout_width="39dp"
        android:layout_height="17dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="200dp"
        android:text="@string/txtCreateUserNameLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>